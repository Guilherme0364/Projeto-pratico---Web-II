<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <hr>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form action="POST" action="/responder">
      <h3>Responda</h3>
      <label for="">Resposta</label>
      <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea><br>
      <button type="submit" class="btn btn-primary">Responder</button>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
    </form>
    <hr>
    <h3>Respostas</h3>
    <% respostas.forEach(resposta=> { %>
      <div class="card">
        <br>
        <div class="card-body">
          <h3><%= resposta.corpo %></h3>
        </div>
        <div class="footer"></div>
          <a href="/resposta/delete<%= pergunta.id %>" class="btn btn-primary">
            <button class="btn btn-danger">Apagar</button>
          </a>
  </div>
</body>
<%- include('partials/footer.ejs') %>
